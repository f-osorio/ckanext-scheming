{
    "scheming_version": 1,
    "organization_type": "organization",
    "about_url": "https://example.com/where-does-this-appear",
    "fields": [
        {
          "field_name": "title",
          "label": "Name",
          "validators": "ignore_missing unicode",
          "form_snippet": "large_text.html",
          "form_attrs": {"data-module": "slug-preview-target"},
          "form_placeholder": "My Journal"
        },
        {
          "field_name": "name",
          "label": "URL",
          "validators": "not_empty unicode name_validator group_name_validator",
          "form_snippet": "slug.html",
          "form_placeholder": "my-theme"
        },
        {
          "field_name": "notes",
          "label": "Description",
          "form_snippet": "markdown.html",
          "form_placeholder": "A little information about my journal..."
        },
        {
          "field_name": "url",
          "label": "Image URL",
          "form_placeholder": "http://example.com/my-image.jpg"
        },
        {
            "field_name": "publicationID",
            "label": "Journal Identifier",
            "form_placeholder": "ISSN or ISBN",
            "validators": "ignore_missing"
        },
        {
            "field_name": "publicationID_Type",
            "label": "Identifier Type",
            "preset": "select",
            "output_validators": "ignore_missing",
            "choices": [
                {
                    "label": "ISSN",
                    "value": "issn"
                },
                {
                    "label": "ISBN",
                    "value": "isbn"
                }
            ]
        }
    ]
}
